{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@auth/*": ["app/auth/*"],
      "@models/*": ["app/models/*"],
      "@common/*": ["app/common/*"],
      "@admin/*": ["app/admin/*"],
      "@shared/*": ["app/shared/*"],
      "@shop/*": ["app/shop/*"],
      "@environments/*": ["environments/*"]
    }
  }
}
